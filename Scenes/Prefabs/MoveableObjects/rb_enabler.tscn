script/source = "extends Area3D

var rb:RigidBody3D 


func setup():
	for bodies in get_overlapping_bodies():
		if bodies.name == \"Player\":
			rb.freeze = false
	rb = get_parent()

func _on_body_exited(body):
	if body.name == \"Player\":
		check_and_freeze(rb)


func _on_body_entered(body):
	if rb == null:
		rb = get_parent()
	if body.name == \"Player\":
		if !rb.should_freeze:
			rb.freeze = false


func check_and_freeze(rb):
	if rb.linear_velocity.length() > 0.01:
		await get_tree().create_timer(2.0).timeout
		check_and_freeze(rb)
	else:
		rb.freeze = true
"

